<?xml version="1.0" encoding="ISO-8859-1"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>intportegauche</object-name>
    <object-name>intportedroite</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitreportegauche</object-name>
    <object-name>intvitreportedroite</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intvitreportegauche</object-name>
    <object-name>intvitreportedroite</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intvitreportegauche</object-name>
    <object-name>intvitreportedroite</object-name>
  </animation>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Yak-18T/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -1.83560 </x-m>
      <y-m> -0.27000 </y-m>
      <z-m>  0.02098 </z-m>
    </offsets>
  </model>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Yak-18T/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -2.16272 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m>  0.28496 </z-m>
    </offsets>
  </model>

  <!-- Siège pilote -->
  <model>
    <path>Aircraft/Yak-18T/Models/Interior/Seats/seat.xml</path>
    <offsets>
      <x-m> -1.35886 </x-m>
      <y-m> -0.31196 </y-m>
      <z-m>  0.21797 </z-m>
    </offsets>
  </model>

  <!-- Siège copilote -->
  <model>
    <path>Aircraft/Yak-18T/Models/Interior/Seats/seat.xml</path>
    <offsets>
      <x-m> -1.35886 </x-m>
      <y-m>  0.31196 </y-m>
      <z-m>  0.21797 </z-m>
    </offsets>
  </model>

  <!-- Siège arrière -->
  <model>
    <path>Aircraft/Yak-18T/Models/Interior/Seats/rear.xml</path>
    <offsets>
      <x-m> -0.60145 </x-m>
      <y-m>  0.00000 </y-m>
      <z-m>  0.04754 </z-m>
    </offsets>
  </model>

  <!-- Ouverture des portes -->
  <animation>
    <name>IntLaPorteGauche</name>
    <object-name>intportegauche</object-name>
    <object-name>intvitreportegauche</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntLaPorteGauche</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <factor> -80 </factor>
    <axis>
      <x1-m> -2.10869 </x1-m>
      <y1-m> -0.61792 </y1-m>
      <z1-m> -0.02628 </z1-m>
      <x2-m> -2.10869 </x2-m>
      <y2-m> -0.60993 </y2-m>
      <z2-m>  0.18235 </z2-m>
    </axis>
  </animation>

  <animation>
    <name>IntLaPorteDroite</name>
    <object-name>intportedroite</object-name>
    <object-name>intvitreportedroite</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntLaPorteDroite</object-name>
    <property>instrumentation/doors/passenger/position-norm</property>
    <factor> -80 </factor>
    <axis>
      <x1-m> -2.10869 </x1-m>
      <y1-m>  0.60993 </y1-m>
      <z1-m>  0.18235 </z1-m>
      <x2-m> -2.10869 </x2-m>
      <y2-m>  0.61792 </y2-m>
      <z2-m> -0.02628 </z2-m>
    </axis>
  </animation>

</PropertyList>

